pipeline {
  agent { label 'master' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  environment {     
    DOCKERHUB_CREDENTIALS= credentials('dockerhubcredentials')
    registry = "686878367233.dkr.ecr.us-west-2.amazonaws.com/docker-composetest" 
    AWS_CREDS = credentials('Abdul-BitcotKeys')
    }
  stages {
    stage('Tooling versions') {
      steps {
        sh '''
          sudo docker --version
          sudo docker-compose version
        '''
      }
    }
    stage('Build') {
      stage('Tooling versions') {
        steps{
          script {
            dockerImage = docker.build registry
            }
          }
        }
    }
    stage('Docker Push') {
      steps {
        sh 'aws ecr get-login-password --region us-west-2 | docker login --username AWS --password-stdin 686878367233.dkr.ecr.us-west-2.amazonaws.com'
        sh 'docker push 686878367233.dkr.ecr.us-west-2.amazonaws.com/docker-composetest:$BUILD_NUMBER'
        sh 'docker push 686878367233.dkr.ecr.us-west-2.amazonaws.com/docker-composetest:latest'
        echo 'Push Image Completed'
      }
    }
    stage('Deploy') {
      steps {
        sh 'docker context use bitcot'
        sh 'docker compose up'
        sh 'docker compose ps --filter json'
        sh 'docker context use default'
      }
    }
  }
}
