pipeline {
  agent { label 'master' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  environment {
    DOCKER_HUB_CREDS = credentials('	Bitcot-DockerHub')
    AWS_CREDS = credentials('Abdul-BitcotKeys')
  }
  stages {
    stage('Tooling versions') {
      steps {
        sh '''
          sudo docker --version
          sudo docker-compose version
        '''
      }
    }
    // stage('Build') {
    //   steps {
    //     sh 'sudo docker context use default'
    //     sh 'ls'
    //     sh 'pwd && sudo docker-compose build'
    //     sh 'sudo docker-compose push'
    //   }
    // }
    stage('Deploy') {
      steps {
        sh 'docker context use bitcot'
        sh 'docker compose up -d'
        sh 'docker compose ps --filter json'
      }
    }
  }
}
