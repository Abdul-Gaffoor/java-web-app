pipeline {
  agent { label 'master' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  environment {
    DOCKER_HUB_CREDS = credentials('Bitcot-DockerHub')
    AWS_CREDS = credentials('Abdul-BitcotKeys')
  }
  stages {
    stage('Tooling versions') {
      steps {
        sh '''
          sudo docker --version
          sudo docker-compose version
        '''
      }
    }
    stage('Build') {
      steps {
        sh 'docker context use default'
        sh 'ls'
        sh 'docker build . -t 686878367233.dkr.ecr.us-west-2.amazonaws.com/docker-composetest'
      }
    }
    stage('Login') {
      steps {
        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }
    stage('Docker Push') {
      steps {
        sh 'docker push 686878367233.dkr.ecr.us-west-2.amazonaws.com/docker-composetest:latest'
      }
    }
    stage('Deploy') {
      steps {
        sh 'docker context use bitcot'
        sh 'docker compose up'
        sh 'docker compose ps --filter json'
        sh 'docker context use default'
      }
    }
  }
}
